{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "out",
        "lib": ["ES2020", "DOM"],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/extension.ts",
        "src/services/**/*",
        "src/utils/**/*",
        "src/webview/chatViewProvider.ts",
        "src/webview/messages.ts",
        "src/webview/webviewContent.ts"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test",
        "dist",
        "src/**/*.vue",
        "src/main.ts",
        "src/store/**/*",
        "src/components/**/*"
    ]
}
